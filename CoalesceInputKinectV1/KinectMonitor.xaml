<Window x:Class="coalesce.KinectMonitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coalesce"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="KinectMonitor" Loaded="WindowLoaded">

    <Grid Width="640" Height="480" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Border BorderBrush="#FF00056A" BorderThickness="4" CornerRadius="10">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Left" Width="640" OpacityMask="#FF979797">
                    <Image Name="Image" Width="640" Height="480" HorizontalAlignment="Left" OpacityMask="#FFD18FFF"/>
                </Viewbox>
            </Border>
            <Label x:Name="frameCounter"></Label>
        </StackPanel>
    </Grid>
</Window>
